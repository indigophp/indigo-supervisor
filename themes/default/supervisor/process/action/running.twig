<div class="btn-group">
    {% if auth_has_access('supervisor.process[view]') %}
            <a href="{{ admin_url() ~ 'supervisor/view_process/' ~ name ~ '/' ~ item.getName() }}" class="hidden-print btn btn-success"><span class="glyphicon glyphicon-eye-open"></span></a>
    {% endif %}
    {% if auth_has_access('supervisor.process[restart]') %}
            <a href="{{ admin_url() ~ 'supervisor/restart_process/' ~ name ~ '/' ~ item.getName() }}" class="hidden-print btn btn-info"><span class="glyphicon glyphicon-refresh"></span></a>
    {% endif %}
    {% if auth_has_access('supervisor.process[stop]') %}
            <a href="{{ admin_url() ~ 'supervisor/stop_process/' ~ name ~ '/' ~ item.getName() }}" class="hidden-print btn btn-danger"><span class="glyphicon glyphicon-stop"></span></a>
    {% endif %}
</div>
