<div class="btn-group">
    {% if auth_has_access('supervisor.supervisor[view]') %}
            <a href="{{ admin_url() ~ 'supervisor/view/' ~ key }}" class="hidden-print btn btn-default"><span class="glyphicon glyphicon-eye-open"></span></a>
    {% endif %}
    {% if auth_has_access('supervisor.supervisor[restart]') %}
            <a href="{{ admin_url() ~ 'supervisor/restart/' ~ key }}" class="hidden-print btn btn-info"><span class="glyphicon glyphicon-refresh"></span></a>
    {% endif %}
    {% if auth_has_access('supervisor.supervisor[shutdown]') %}
            <a href="{{ admin_url() ~ 'supervisor/shutdown/' ~ key }}" class="hidden-print btn btn-danger"><span class="glyphicon glyphicon-stop"></span></a>
    {% endif %}
</div>
